<div class="products">
	<div class="container">
		<h2>Products</h2>
		<% @products.each do |product| %>
		<div class="col-md-9">	
			<div class="content-top1">
				<div class="col-md-4 col-md4">
					<div class="col-md1 simpleCart_shelfItem">
						<a href="single.html">
							<img class="img-responsive" <%= image_tag product.image %> 
						</a>
						<h3><a href="single.html"><%= product.title %></a></h3>
						<div class="price">
								<h5 class="item_price"><%= number_to_currency product.price %></h5>
								<a href="#" class="item_add">Add To Cart</a>
								
								<div class="clearfix"> </div>
						</div>
					</div>
				</div>	
		
			</div>	
		</div>
